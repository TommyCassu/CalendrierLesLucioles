{% block title %}Accueil{% endblock %}

{% block body %}
<style>
    .send:hover {
        background-color: #f9408a;
    }
</style>
<form method="POST" action="">
                
        <div class="absolute w-screen h-screen flex flex-col ">
            {# Formulaire de connexion #}
            <div class="px-10 w-auto p-4 shadow-2xl mx-auto rounded-2xl bg-white justify-center">
                <div class="px-10 w-96 p-4 mx-auto">
                    {#  #}
                    <div class="flex justify-center text-4xl font-extrabold">
                        <h1>Connexion</h1>
                    </div>
                    {# Zone de saisie Email #}
                    <div class="mt-5">
                        <label for="Mail">Email :</label><br>
                        <input type="mail" id="mail" name="mail" placeholder="Entrez un Email" class="border border-gray-400 border-opacity-50 shadow-md rounded my-1.5 h-9 w-full p-1 focus:outline-none ">
