                        <input type="password" id="pass" name="pass" class="border border-gray-400 border-opacity-50 shadow-md rounded my-1.5 h-9 w-full p-1 focus:outline-none " placeholder="Saisir votre mot de passe" >
                    </div>
                    {# Boutons de Connexion/Inscription #}
                    <div class="mt-5 flex justify-between">
                        <button class="send w-5/12 p-2.5  bg-pink-500  rounded-lg"><a href=""> Inscription </a></button>
                        <input type="submit" id="connexion" name="connexion" value="Connexion" class="send w-5/12 p-2.5 cursor-pointer bg-pink-500 border-yellow-900 rounded-lg">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token('log_form') }}">
                </div>
                    {# Mot de passe oublié #}
                    <div class="mt-5">
                        <a href="#" class="text-sm underline text-gray-600"> Mot de passe oublié ?</a>
                    </div>
            </div>
        </div> 
        </div>
